<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MainActivity">

    <Button
        android:id="@+id/device_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:padding="20dp"
        android:text="Devices"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="185dp"
            android:layout_height="140dp"
            android:src="@drawable/backpack"
            ></ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/connectee_logo"
                android:id="@+id/ImageViewConnecteeLogo">


            </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:id="@+id/TextViewEtatDeConnexion"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:text="connecté"
            android:layout_below="@+id/ImageViewConnecteeLogo"
            ></TextView>


        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewDeviceName"
        android:text="Select Your Device"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        >

    </TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/logoCO"
            android:src="@drawable/logo_co"
            android:layout_marginLeft="30dp"
            android:scaleX="2"
            android:scaleY="2"/>

        <TextView
            android:id="@+id/AfficheurCO"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@+id/logoCO"
            android:text="0 ppm"
            android:textSize="50dp" />

    </RelativeLayout>
    <TextView
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#AAAAAA"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/logoCO2"
            android:src="@drawable/logo_co2"
            android:layout_marginLeft="30dp"
            android:scaleX="1.3"
            android:scaleY="1.3"/>

        <TextView
            android:id="@+id/AfficheurCO2"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@+id/logoCO2"
            android:text="0 ppm"
            android:textSize="50dp"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#AAAAAA"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/logoTemp"
            android:src="@drawable/logo_temp"
            android:layout_marginLeft="30dp"
            android:scaleX="1.4"
            android:scaleY="1.4"/>

        <TextView
        android:id="@+id/AfficheurTemp"
            android:layout_width="271dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@+id/logoTemp"
        android:text="0 °C"
        android:textSize="50dp"
        />

    </RelativeLayout>
    <TextView
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:layout_gravity="center"
        android:background="#AAAAAA"/>








</LinearLayout>


